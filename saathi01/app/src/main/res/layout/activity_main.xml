<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/status_bar_item_app_background"
    android:backgroundTint="@color/common_google_signin_btn_tint"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/aquaboy"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:background="#FA070707"
        android:fontFamily="@font/rye"
        android:gravity="center"
        android:padding="20dp"
        android:text="Saathi"
        android:textColor="#F4F9FBFB"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aquaboy"
        android:background="#FA0F33" />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aquaboy"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="334dp"
        android:layout_marginRight="50dp"
        android:drawableRight="@android:drawable/sym_action_email"
        android:hint="Enter address" />
    <!--
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/password"
            android:layout_below="@+id/email"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/ic_lock_black_24dp"

            />-->

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/email"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="63dp"
        android:background="#D8D3B2"
        android:onClick="ent"
        android:text="Login"
        android:textSize="10dp"


        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="692dp"
        android:background="#103342" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="711dp"
        android:background="#000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="157dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="93dp"
        app:srcCompat="@drawable/si" />

</RelativeLayout>