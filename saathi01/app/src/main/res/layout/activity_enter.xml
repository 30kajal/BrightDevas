<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enter">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saathi"
        android:textSize="40dp"
        android:padding="20dp"
        android:background="#262627"
        android:gravity="center"
        android:id="@+id/aquaboy"
        android:textColor="#F0E8E8"
        />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aquaboy"
        android:layout_marginTop="0dp"
        android:background="#FA0F33" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:text="AYURVEDIC CARE"
        android:textSize="15dp"
        android:padding="15dp"
        android:id="@+id/ayu"
        android:background="@drawable/bg"/>

    <Button
        android:id="@+id/car"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:layout_alignLeft="@+id/ayu"
        android:background="@drawable/bg"
        android:padding="14dp"
        android:text="CARDIAC CARE"
        android:textSize="15dp"
        android:layout_marginLeft="147dp"
       />
    <Button
        android:id="@+id/dia"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:layout_alignLeft="@+id/ayu"
        android:background="@drawable/bg"

        android:padding="13dp"
        android:text="DIABETIC CARE"
        android:textSize="15dp"
        android:layout_marginLeft="280dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ayu"
        android:text="HYPERTENSION"
        android:textSize="15dp"
        android:padding="15dp"
        android:id="@+id/hyp"
        android:background="@drawable/bg"/>

    <Button
        android:id="@+id/liv"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car"
        android:layout_alignLeft="@+id/ayu"
        android:background="@drawable/bg"
        android:padding="15dp"
        android:text="LIVER CARE"
        android:textSize="15dp"
        android:layout_marginLeft="147dp"
        />
    <Button

        android:id="@+id/child"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dia"
        android:layout_alignLeft="@+id/ayu"
        android:background="@drawable/bg"

        android:padding="15dp"
        android:text="CHILD CARE"
        android:textSize="15dp"
        android:layout_marginLeft="280dp"
        />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hyp"
        android:layout_marginTop="0dp"
        android:background="#FA0F33" />

    <EditText
        android:id="@+id/med"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/hyp"

        android:layout_marginTop="40dp"
        android:layout_marginRight="63dp"
        android:text="Type medicine name" />


    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="34dp"

        android:layout_below="@+id/child"
        android:layout_alignLeft="@+id/med"
        android:layout_marginLeft="326dp"

        android:layout_marginTop="45dp"
        android:background="#D8D3B2"
        android:onClick="lis"
        android:text="CHECK"
        android:textSize="7dp"

        />
    <Button
        android:id="@+id/pro"
        android:layout_width="wrap_content"
        android:layout_height="34dp"

        android:layout_below="@+id/child"
        android:layout_alignLeft="@+id/med"
        android:layout_marginLeft="326dp"

        android:layout_marginTop="100dp"
        android:background="#D8D3B2"
        android:onClick="lis"
        android:text="PROCEED"
        android:textSize="7dp"

        />
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/med">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_below="@+id/med"
        android:layout_marginTop="46dp"></ListView>

</ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#103342"
        android:layout_marginTop="692dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginTop="711dp"/>



</RelativeLayout>